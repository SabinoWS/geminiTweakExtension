{
    "manifest_version": 3,
    "name": "Gemini Tweak Extension",
    "version": "1.3",
    "description": "Extens√£o para personalizar a interface do Google Gemini com controles de privacidade e atalhos.",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Gemini Tweak Extension"
    },
    "content_scripts": [
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "src/utils/i18n.js",
                "src/config/config.js",
                "src/utils/utils.js",
                "src/utils/visuals.js",
                "src/pageObjects/Sidebar.js",
                "src/pageObjects/ChatInterface.js",
                "src/pageObjects/ChatList.js",
                "src/pageObjects/Dialogs.js",
                "src/features/CustomModelButtons.js",
                "src/features/HideGems.js",
                "src/features/HideChats.js",
                "src/features/LimitChats.js",
                "src/features/HideMyItems.js",
                "src/features/DeleteChat.js",
                "src/features/SidebarControl.js",
                "src/states/state.js",
                "src/features/Main.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ]
}